html
  head
    meta(charset='utf-8')
    title ES Discuss
    link(href='https://yandex.st/highlightjs/7.3/styles/default.min.css', rel='stylesheet')
    link(href='https://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-combined.min.css', rel='stylesheet')
  body
    .container
      .row
        .span12
          .page-header
            h1 ES Discuss / 
              small #{topic.subject}
      -var postID = 0;
      for message in messages
        - postID++
        .row(data-message=message)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js')
    script(src='https://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js')
    script(src='https://yandex.st/highlightjs/7.3/highlight.min.js')
    script(src='/load-messages/build/build.js')
    script
      require('esdiscuss-load-messages')