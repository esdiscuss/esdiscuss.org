extends layout

block content
  a(href="https://github.com/esdiscuss/esdiscuss.org")
    img.ribbon(src="https://s3.amazonaws.com/github/ribbons/forkme_right_orange_ff7600.png", alt="Fork me on GitHub")
  .jumbotron.masthead
    .row
      .col-md-12
        h1 ECMAScript Discussion Archives
    .row
      .col-md-8.col-md-offset-2
        p This site aims to provide an easily browsable, nicely formatted archive of all the email correspondence on the #[span(style="white-space:nowrap;") es-discuss@mozilla.org] mailing list.
    .row
      .col-md-4.col-md-offset-2
        a(href='/topics').btn.btn-lg.btn-primary.btn-block
          i.icon-list
          | &nbsp; View Topics
      .col-md-4
        a(href='/notes').btn.btn-lg.btn-primary.btn-block
          i.icon-copy
          | &nbsp; View Notes
    .row(style="margin-top: 30px;")
      .col-md-8.col-md-offset-2
        a(href='https://mail.mozilla.org/listinfo/es-discuss').btn.btn-lg.btn-primary.btn-block
          i.icon-star
          | &nbsp; Subscribe
